\include "ly/ily/layout-songs.ily"

structure = \relative c' { 
    \key g \minor
    \partial 2. s2.
    \startSection "A"
    \repeat volta 2 { 
        \bar "[|:"
        s1*4 \break
        s1
    }
    \alternative {
        { s1*3 \bar ":|]" }
        { s1*3 \break }
    }
    \override Score.RehearsalMark #'extra-offset = #'( -3 . -1 )
    \startSection "B"
    s1*4 \break
    s1*4 \break
    \bar "||"
    s1*4 \break
    s1*4 
    \bar "|."
}

chordsSong = \chordmode { 
    \set chordChanges = ##t 
    \set chordNameExceptions = #flamingChordExceptions
    \set noChordSymbol = ##f

    s2.
    c1:m7 | f:7 | bf:maj7 | ef:maj7 | 
    a1:m7.5- | d:9 | g:m | s ||
        d1:7.13- | g:m | s ||


    a1:m7.5- | d:7.9- | g:m | s ||
    c1:m7 | f:7 | bf:maj7 | ef:maj7 | 
    a1:m7.5- | d:7.9- | g2:m gf:7 | f:m7 bf:7 | 
    ef1:maj7 | a2:m7.5- d:aug7 | g1:m7 | g:7 ||
}

melodyHead = \relative c'' { 
    g4 a bf ||
    ef1 ~ | 4 f, g a | d2 2 ~ | 4 ef, f g | 
    c1 ~ | 4 d, e fs | bf1 | r4 g a bf ||
        c4\repeatTie a c bf | g1 | r2 fs4 g ||

    a4 d, a'2 ~ | 4 4 g a | bf1 ~ | 4 4 a bf | 
    c1 ~ | 4 f, f' ef | d1 ~ | 2 cs4 d | 

    ef4 4 c4 4 | a2. ef'4 | d2 2 ~ | 2 g, | 
    c2. bf4 | a2 bf4 d, | g1 | R1 ||
}

melodySong = \relative c' { 
    \melodyHead
}

lyricsHeadOne = \lyricmode {
    \override LyricText.font-family = #'typewriter
    \override LyricText.font-size = #'2

    The fall -- ing leaves 
    drift by my win -- dow,
    The au -- tumn leaves 
    of red and gold;

